{
  "name": "evm-client",
  "version": "1.0.0",
  "description": "Bitfinity EVM TS Client",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitfinity-network/evm-client"
  },
  "author": "Bitfinity",
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@types/jest": "^29.5.3",
    "babel-jest": "^29.6.2",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "test": "jest",
    "watch": "tsup --watch",
    "build": "tsup  --format esm,cjs,iife --dts --sourcemap src/index.ts",
